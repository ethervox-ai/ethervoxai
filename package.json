{
  "name": "ethervoxai",
  "version": "1.0.0",
  "description": "Private, multilingual voice AI assistant for smart homes",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:core",
    "build:core": "tsc",
    "build:web": "tsc --project tsconfig.web.json",
    "build:mobile": "tsc --project tsconfig.mobile.json",
    "build:ui": "npm run build:web",
    "build:all": "npm run build:core && npm run build:web",
    "build:watch": "tsc --watch",
    "dev": "npm run build:watch",
    "start": "node dist/index.js",
    "demo": "node scripts/demo/launch-demo.js",
    "demo:ui": "node src/examples/ui/demo/launch-ui-demo.js",
    "demo:ai": "npm run build && node src/test-ai-integration.js",
    "demo:windows": "node dist/demo/windows-desktop.js",
    "demo:windows:dev": "npm run build && node dist/demo/windows-desktop.js",
    "lint": "eslint src/**/*.{ts,tsx} --fix",
    "lint:check": "eslint src/**/*.{ts,tsx}",
    "lint:core": "eslint src/modules/**/*.ts src/index.ts src/demo.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:audio": "node tests/audio-input-output/launch-audio-test.js",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "typecheck:web": "tsc --project tsconfig.web.json --noEmit",
    "typecheck:mobile": "tsc --project tsconfig.mobile.json --noEmit"
  },
  "keywords": [
    "voice-assistant",
    "ai",
    "privacy",
    "multilingual",
    "smart-home",
    "local-llm",
    "typescript",
    "embedded-devices"
  ],
  "author": "EthervoxAI Team",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.0",
    "ts-jest": "^29.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.0.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mkostersitz/ethervoxai.git"
  },
  "bugs": {
    "url": "https://github.com/mkostersitz/ethervoxai/issues"
  },
  "homepage": "https://github.com/mkostersitz/ethervoxai#readme",
  "dependencies": {
    "axios": "^1.11.0",
    "node-powershell": "^5.0.1",
    "node-wav-player": "^1.0.0",
    "play-sound": "^1.1.6",
    "say": "^0.16.0",
    "socket.io": "^4.7.0"
  },
  "optionalDependencies": {
    "mic": "^2.1.2",
    "speaker": "^0.5.5",
    "wav": "^1.0.2"
  }
}
