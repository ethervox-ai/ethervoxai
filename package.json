{
  "name": "ethervoxai",
  "version": "1.0.0",
  "description": "Private, multilingual voice AI assistant for smart homes",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:core",
    "build:core": "tsc",
    "build:ui": "tsc --project tsconfig.ui.json",
    "build:all": "npm run build:core && npm run build:ui",
    "build:watch": "tsc --watch",
    "dev": "npm run build:watch",
    "start": "node dist/index.js",
    "demo": "node dist/demo.js",
    "lint": "eslint src/**/*.{ts,tsx} --fix",
    "lint:check": "eslint src/**/*.{ts,tsx}",
    "lint:core": "eslint src/modules/**/*.ts src/index.ts src/demo.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "typecheck:ui": "tsc --project tsconfig.ui.json --noEmit"
  },
  "keywords": [
    "voice-assistant",
    "ai",
    "privacy",
    "multilingual",
    "smart-home",
    "local-llm",
    "typescript",
    "embedded-devices"
  ],
  "author": "EthervoxAI Team",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.5.0",
    "eslint": "^9.0.0",
    "@eslint/js": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "typescript-eslint": "^8.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.2.0",
    "rimraf": "^6.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mkostersitz/ethervoxai.git"
  },
  "bugs": {
    "url": "https://github.com/mkostersitz/ethervoxai/issues"
  },
  "homepage": "https://github.com/mkostersitz/ethervoxai#readme"
}
